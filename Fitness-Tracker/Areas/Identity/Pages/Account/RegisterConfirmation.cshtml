@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1 style="text-align: center">@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p style="text-align: center;">
    <a style="text-align: center;" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to complete registration process</a>
</p>
    }
    else
    {
        <p style="text-align: center;">
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to complete registration process</a>
</p>
    }
}

